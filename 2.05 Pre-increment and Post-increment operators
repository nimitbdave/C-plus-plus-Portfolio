  
/* 

*/

#include <iostream>
using namespace std; 

int main()
{ // shows the difference between m++ and ++m:
    
    int m,n;
    
    m = 44;
    n = ++m; // the pre-increment operator is applied to m
    
    cout << "m = " << m << ", n = " << n << endl;
    
    m = 44;
    n = m++; // the post-increment operator is applied to m
    
    cout << "m = " << m << ", n = " << n << endl;
}

/*
OUPUT: 
m = 45, n = 45
m = 45, n = 44
*/
