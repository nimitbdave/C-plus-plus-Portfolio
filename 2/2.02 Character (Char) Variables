/* 

*/

#include <iostream>
using namespace std; 

int main()
{ // prints the character and its internally stored integer value:
    
    char c='A';
    cout << "c = " << c << ", int(c) = " << int(c) << endl;
    
    c='t';
    cout << "c = " << c << ", int(c) = " << int(c) << endl;
    
    c='\t'; // the tab character
    cout << "c = " << c << ", int(c) = " << int(c) << endl;
    
    c='!';
    cout << "c = " << c << ", int(c) = " << int(c) << endl;
}

/*
OUPUT: 
c = A,int(c) = 65
c = t,int(c) = 116
c = ,int(c) = 9
c = !,int(c) = 33    These are the charactersâ€™ ASCII codes.
*/
