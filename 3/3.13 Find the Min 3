/* 

*/

#include <cfloat>
#include <cmath>
#include <iostream>
using namespace std; 

int main()
{   
    int n1,n2,n3;
    
    cout << "Enter three integers: ";
    cin >> n1 >> n2 >> n3;
    
    if (n1 < n2)
      if (n1 < n3) cout << "Their minimum is " << n1 << endl;
      else cout << "Their minimum is " << n3 << endl;
    else // n1 >= n2
      if (n2 < n3) cout << "Their minimum is " << n2 << endl;
      else cout << "Their minimum is " << n3 << endl;
}

/*
OUPUT: 
Enter three integers: 77 33 55
Their minimum is 33
*/
