/* 
sum of an integer range
*/

#include <cfloat>
#include <cmath>
#include <iostream>
using namespace std; 

int main()
{ int n;
  cout << "Enter a positive integer: ";
  cin >> n;

  long sum=0;
  for (int i=1; i < n/ 2; i++)      // the scope of this i is this loop
    sum += i;
  for (int i=n/2; i <= n; i++)      // the scope of this i is this loop
    sum += i;
  cout << "The sum of the first " << n << " integers is "
       << sum << endl;
}

/*
OUPUT: 

*/
