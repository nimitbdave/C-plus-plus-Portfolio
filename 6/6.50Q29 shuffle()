#include <iostream> // defines cin and cout
using namespace std; 

int main()
{ // 
    
}
void shuffle(int a[], int n
{ // The Perfect Shuffle for an even number of elements:
  assert(n <= SIZE);
  int temp[SIZE];
  for (int i=0; i<n/2; i++)
  { temp[2*i] = a[i];
    temp[2*i+1] = a[n/2+i];
  }
  for (int i=0; i<n; i++)
    a[i] = temp[i];
}
